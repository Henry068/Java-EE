import java.io.IOException;
import javax.servlet.ServletException;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;


@WebServlet("/registerServlet")
public class registerServlet extends HttpServlet {

	protected void doGet(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
		
		// 接受使用者的參數
		String email = request.getParameter("email");
		//Number phone = request.getParameter("phone");
		
		// Email 是否符合格式
		boolean isEmailisValidate= false;
		/*public boolean isEmailisValidate(String email){		
		  String ePattern = "^[a-zA-Z0-9.!#$%&'*+/=?^_`{|}~-]+@((\\[[0-9]{1,3}\\.[0-9]{1,3}\\.[0-9]{1,3}\\.[0-9]{1,3}\\])|(([a-zA-Z\\-0-9]+\\.)+[a-zA-Z]{2,}))$";
	       Pattern p = Pattern.compile(ePattern);
	       Matcher m = p.matcher(email);
	       return m.matches();*/
		if(isEmailisValidate) {
			// 如果 Email 合法，就導到註冊成功頁
			request.setAttribute("userEmail", email);
			String url  = "registerFinish.jsp";
			request.getRequestDispatcher(url).forward(request, response);
			
			} else {
			// 如果 Email 不合法，就導回原來的註冊頁
			String url  = "register.jsp";
			request.setAttribute("emailErrorMsg", "請輸入正確的Email");
			request.getRequestDispatcher(url).forward(request, response);

			}
		/*public boolean isEmailisValidate(Number phone){
		  Number phone="0?[0-9]{9}";
		 
		 }
		}*/
	}

	protected void doPost(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
		doGet(request, response);
	}

}
